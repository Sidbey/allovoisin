extends ../layout

block content
    if error
        each err in error
            div.bg-danger
                h3= err

    .container
        #Inscription.container
            form.form-horizontal(action='/client/edit-profil' method='post')
                input(type="hidden", name="_csrf", value=csrf)
                h2 Edition du profil

                .form-group
                    label.col-sm-3.control-label(for='firstName') Nom
                    .col-sm-9
                        input#firstName.form-control(name='lastName', value=form.lastName, type='text', placeholder='Nom', autofocus='')
                .form-group
                    label.col-sm-3.control-label(for='firstName') Prénom
                    .col-sm-9
                        input#firstName.form-control(name='firstName', value=form.firstName type='text', placeholder='Prénom', autofocus='')
                .form-group
                    label.col-sm-3.control-label(for='email') Adresse Postale
                    .col-sm-9
                        input#email.form-control(name='road', value=form.road type='text', placeholder='Rue')
                        input#email.form-control(name='city', value=form.city, type='text', placeholder='Ville')
                        input#email.form-control(name='country', value=form.country, type='text', placeholder='Pays')
                .form-group
                    label.col-sm-3.control-label(for='birthDate', placeholder='age') Age
                    .col-sm-9
                        input#birthDate.form-control(name='age', value=form.age, type='number')
                .form-group
                    .col-sm-9.col-sm-offset-3
                        button.btn.btn-primary.btn-block(type='submit') S&apos;inscrire

