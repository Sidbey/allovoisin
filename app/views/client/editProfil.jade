extends ../layout

block content
    if error
        each err in error
            div.bg-danger
                h3= err

    .container
        form#new-offer(action='/client/edit-profil' method='post')
            input(type="hidden", name="_csrf", value=csrf)
            h3  Edition du profil

            fieldset
                | Nom :
                input.form-control(name='lastName', value=form.lastName, type='text', placeholder='Nom', autofocus='')

            fieldset
                | Prénom :
                input.form-control(name='firstName', value=form.firstName, type='text', placeholder='Prénom', autofocus='')

            fieldset
                | E-mail :
                input.form-control(name='email', value=form.email, type='email', placeholder='Adresse Mail')

            fieldset
                | Rue :
                input.form-control(name='road', value=form.road, type='text', placeholder='Rue')

            fieldset
                | Ville :
                input.form-control(name='city', value=form.city, type='text', placeholder='Ville')

            fieldset
                | Pays :
                input.form-control(name='country', value=form.country, type='text', placeholder='Pays')

            fieldset
                | Age :
                input.form-control(name='age' value=form.age, type='number', min='5', max='100', size='2')

            fieldset
                button#new-offer-submit(name='submit', type='submit')  Modifier