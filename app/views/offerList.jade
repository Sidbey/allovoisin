        table.table.table-striped.table-bordered
            each offer in offers
                tr
                    td= offer.name
                    td= offer.matter.toUpperCase()
                    td= offer.level
                    td= offer.price + " â‚¬"
                    td
                        a(href="/tutor/" + offer.tutor.tutorID)= offer.tutor.firstName
