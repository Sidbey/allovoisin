extends layout

block content
    if offers
        table.table.table-striped.table-bordered
            - for (var k in offers)
                tr
                    td= offers[k].name
                    td= offers[k].matter.toUpperCase()
                    td= offers[k].level
                    td= offers[k].price + " â‚¬"
                    td
                        a(href="/tutor/"+offers[k].tutor.tutorID)= offers[k].tutor.firstName
                    td= offers[k].tutor.road
                    if sess.isAuthenticated
                        td= offers[k].tutor.distance + " m"
                        td
                            a.btn.btn-default(href='/') Valider

