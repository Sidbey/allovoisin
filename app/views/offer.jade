extends layout

block content
    if error
        each err in error
            div.bg-danger
                h3= err

    if offer
        .offer-card
            .cadre
                img(src='', alt='')
            .espace
                h1= offer.name
                h2(href="/tutor/" + offer.tutor.tutorID)= offer.tutor.firstName
                if sess.isAuthenticated
                    h3= offer.tutor.distance + " m"
                h4= offer.price + " €"
                div
                    p
                        | Matiere :
                        label= offer.matter
                    p
                        b Disponibilité
                    p
                        | Journée :
                        label= offer.plageJournaliere
                    p
                        | Horaire : De
                        label= offer.plageHoraire
                        |  à
                        label= offer.plageHoraire
                    p
                    p
                        | Description :
                        label= offer.description
            if sess.isAuthenticated
                a.btn(href='#') Demande d'offre
            else
                p
                    b Si vous souhaitez le contacter, Incrivez vous.