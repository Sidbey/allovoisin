extends layout

block content
    if error
        - for (var k in error)
        div.bg-danger
            h3 #{error[k]}

    .container
        form#new-offer(action='/sign-up-tutor' method='post')
            input(type="hidden", name="_csrf", value=csrf)
            h3  Inscription Tuteur

            fieldset
                | Nom :
                input.form-control(name='lastName', value=form.lastName, type='text', placeholder='Nom', autofocus='')

            fieldset
                | Prénom :
                input.form-control(name='firstName', value=form.firstName, type='text', placeholder='Prénom', autofocus='')

            fieldset
                | E-mail :
                input.form-control(name='email', value=form.email, type='email', placeholder='Adresse Mail')

            fieldset
                | Rue :
                input.form-control(name='road', value=form.road, type='text', placeholder='Rue')

            fieldset
                | Ville :
                input.form-control(name='city', value=form.city, type='text', placeholder='Ville')

            fieldset
                | Pays :
                input.form-control(name='country', value=form.country, type='text', placeholder='Pays')

            fieldset
                | Mot de passe :
                input.form-control(name='password', type='password', placeholder='Mot de passe')

            fieldset
                | Confirmation mot de passe :
                input.form-control(name='confirmPass', type='password', placeholder='Mot de passe')

            fieldset
                | Age :
                input.form-control(name='age' value=form.age, type='number' min='14' max='100')

            fieldset
            p Matière(s) de Prédilection:
                .form-group
                    label(for='sel1') Matière:

                    select#sel1.form-control(name='matter')
                        option Français

                        option Histoire

                        option Géoographie

                        option Philosophie

            fieldset
                .form-group
                    label(for='sel1') Niveau:

                    select#sel1.form-control(name='level')
                        option Primaire

                        option College

                        option Lycée

                        option Université

            fieldset
                button#new-offer-submit(name='submit', type='submit', data-submit='...Sending')  Valider l&apos;inscription

        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')

        script.
            window.jQuery || document.write('<script src="../../assets/js/vendor/jquery.min.js"><\\/script>')

        script(src='../../dist/js/bootstrap.min.js')
        // IE10 viewport hack for Surface/desktop Windows 8 bug
        script(src='../../assets/js/ie10-viewport-bug-workaround.js')
